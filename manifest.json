{
  "manifest_version": 3,
  "name": "高機能スクリーンショット (TS)",
  "version": "1.0",
  "description": "表示範囲またはページ全体のスクリーンショットを撮影し、指定フォルダに保存します。",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "notifications",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html", // dist/popup.html を指す
    "default_icon": {
      "16": "images/icon16.png", // dist/images/icon16.png
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "js/background.js" // dist/js/background.js
  },
  "options_page": "options.html", // dist/options.html
  "icons": {
    "16": "images/icon16.png",   // dist/images/icon16.png
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
